{
  "schema_playbook": {
    "version": "2.0.0",
    "description": "Comprehensive schema markup playbook for different business types and use cases",
    "last_updated": "2024-01-15",
    "business_types": {
      "service_business": {
        "description": "Local service businesses like plumbing, HVAC, electrical, etc.",
        "primary_schemas": [
          "LocalBusiness",
          "Service",
          "Organization",
          "WebSite"
        ],
        "page_specific_schemas": {
          "homepage": {
            "required": [
              "LocalBusiness",
              "WebSite",
              "Organization"
            ],
            "optional": [
              "BreadcrumbList"
            ],
            "template": {
              "@context": "https://schema.org",
              "@graph": [
                {
                  "@type": "LocalBusiness",
                  "@id": "#{site_url}/#organization",
                  "name": "#{business_name}",
                  "alternateName": "#{business_alternate_name}",
                  "description": "#{business_description}",
                  "url": "#{site_url}",
                  "telephone": "#{phone_number}",
                  "email": "#{email_address}",
                  "address": {
                    "@type": "PostalAddress",
                    "streetAddress": "#{street_address}",
                    "addressLocality": "#{city}",
                    "addressRegion": "#{state_province}",
                    "postalCode": "#{postal_code}",
                    "addressCountry": "#{country_code}"
                  },
                  "geo": {
                    "@type": "GeoCoordinates",
                    "latitude": "#{latitude}",
                    "longitude": "#{longitude}"
                  },
                  "areaServed": "#{service_areas}",
                  "hasOfferCatalog": {
                    "@type": "OfferCatalog",
                    "name": "#{service_catalog_name}",
                    "itemListElement": "#{services_array}"
                  },
                  "priceRange": "#{price_range}",
                  "paymentAccepted": "#{payment_methods}",
                  "currenciesAccepted": "#{currency}",
                  "openingHours": "#{opening_hours}",
                  "image": "#{business_logo}",
                  "logo": "#{business_logo}",
                  "sameAs": "#{social_media_profiles}"
                },
                {
                  "@type": "WebSite",
                  "@id": "#{site_url}/#website",
                  "url": "#{site_url}",
                  "name": "#{website_name}",
                  "description": "#{website_description}",
                  "publisher": {
                    "@id": "#{site_url}/#organization"
                  },
                  "potentialAction": {
                    "@type": "SearchAction",
                    "target": "#{site_url}/search?q={search_term_string}",
                    "query-input": "required name=search_term_string"
                  }
                }
              ]
            }
          },
          "service_pages": {
            "required": [
              "Service",
              "LocalBusiness"
            ],
            "optional": [
              "FAQPage",
              "HowTo"
            ],
            "template": {
              "@context": "https://schema.org",
              "@type": "Service",
              "name": "#{service_name}",
              "description": "#{service_description}",
              "provider": {
                "@type": "LocalBusiness",
                "@id": "#{site_url}/#organization"
              },
              "areaServed": "#{service_areas}",
              "availableChannel": {
                "@type": "ServiceChannel",
                "serviceUrl": "#{service_page_url}",
                "servicePhone": "#{phone_number}",
                "availableLanguage": "#{languages}"
              },
              "offers": {
                "@type": "Offer",
                "description": "#{service_offer_description}",
                "priceCurrency": "#{currency}",
                "availability": "InStock",
                "validFrom": "#{valid_from_date}",
                "priceRange": "#{price_range}"
              },
              "serviceType": "#{service_category}",
              "category": "#{service_category}",
              "hasOfferCatalog": {
                "@type": "OfferCatalog",
                "name": "#{service_name} Options",
                "itemListElement": "#{service_variations}"
              }
            }
          },
          "about_page": {
            "required": [
              "Organization",
              "Person"
            ],
            "optional": [
              "Team"
            ],
            "template": {
              "@context": "https://schema.org",
              "@graph": [
                {
                  "@type": "Organization",
                  "@id": "#{site_url}/#organization",
                  "name": "#{business_name}",
                  "description": "#{about_description}",
                  "foundingDate": "#{founding_date}",
                  "founder": "#{founder_info}",
                  "numberOfEmployees": "#{employee_count}",
                  "address": {
                    "@type": "PostalAddress",
                    "streetAddress": "#{street_address}",
                    "addressLocality": "#{city}",
                    "addressRegion": "#{state_province}",
                    "postalCode": "#{postal_code}",
                    "addressCountry": "#{country_code}"
                  },
                  "contactPoint": {
                    "@type": "ContactPoint",
                    "telephone": "#{phone_number}",
                    "contactType": "customer service",
                    "availableLanguage": "#{languages}"
                  }
                }
              ]
            }
          },
          "contact_page": {
            "required": [
              "ContactPage"
            ],
            "optional": [
              "PostalAddress"
            ],
            "template": {
              "@context": "https://schema.org",
              "@type": "ContactPage",
              "name": "Contact #{business_name}",
              "description": "Contact information for #{business_name}",
              "mainEntity": {
                "@type": "LocalBusiness",
                "@id": "#{site_url}/#organization"
              }
            }
          },
          "reviews_page": {
            "required": [
              "Review",
              "AggregateRating"
            ],
            "template": {
              "@context": "https://schema.org",
              "@type": "LocalBusiness",
              "@id": "#{site_url}/#organization",
              "aggregateRating": {
                "@type": "AggregateRating",
                "ratingValue": "#{average_rating}",
                "reviewCount": "#{review_count}",
                "bestRating": "5",
                "worstRating": "1"
              },
              "review": "#{reviews_array}"
            }
          }
        },
        "service_categories": {
          "plumbing": {
            "serviceType": "Plumbing Services",
            "category": "Plumber",
            "services": [
              "Emergency Plumbing",
              "Drain Cleaning",
              "Water Heater Repair",
              "Pipe Installation",
              "Leak Detection"
            ]
          },
          "hvac": {
            "serviceType": "HVAC Services",
            "category": "HVAC Contractor",
            "services": [
              "Air Conditioning Repair",
              "Heating Installation",
              "Duct Cleaning",
              "Furnace Maintenance",
              "Heat Pump Service"
            ]
          },
          "electrical": {
            "serviceType": "Electrical Services",
            "category": "Electrician",
            "services": [
              "Electrical Repair",
              "Panel Upgrades",
              "Lighting Installation",
              "Outlet Installation",
              "Electrical Inspection"
            ]
          }
        }
      },
      "ecommerce": {
        "description": "Online retail and e-commerce businesses",
        "primary_schemas": [
          "Product",
          "Offer",
          "Organization",
          "WebSite"
        ],
        "page_specific_schemas": {
          "homepage": {
            "required": [
              "Organization",
              "WebSite"
            ],
            "template": {
              "@context": "https://schema.org",
              "@graph": [
                {
                  "@type": "Organization",
                  "@id": "#{site_url}/#organization",
                  "name": "#{business_name}",
                  "url": "#{site_url}",
                  "logo": "#{business_logo}",
                  "contactPoint": {
                    "@type": "ContactPoint",
                    "telephone": "#{phone_number}",
                    "contactType": "customer service"
                  }
                },
                {
                  "@type": "WebSite",
                  "@id": "#{site_url}/#website",
                  "url": "#{site_url}",
                  "name": "#{website_name}",
                  "publisher": {
                    "@id": "#{site_url}/#organization"
                  }
                }
              ]
            }
          },
          "product_pages": {
            "required": [
              "Product"
            ],
            "template": {
              "@context": "https://schema.org",
              "@type": "Product",
              "name": "#{product_name}",
              "description": "#{product_description}",
              "image": "#{product_images}",
              "brand": {
                "@type": "Brand",
                "name": "#{brand_name}"
              },
              "offers": {
                "@type": "Offer",
                "price": "#{price}",
                "priceCurrency": "#{currency}",
                "availability": "#{availability_status}",
                "seller": {
                  "@type": "Organization",
                  "@id": "#{site_url}/#organization"
                }
              },
              "aggregateRating": {
                "@type": "AggregateRating",
                "ratingValue": "#{average_rating}",
                "reviewCount": "#{review_count}"
              }
            }
          }
        }
      },
      "real_estate": {
        "description": "Real estate agencies and property listings",
        "primary_schemas": [
          "RealEstateAgent",
          "Place",
          "Product"
        ],
        "page_specific_schemas": {
          "homepage": {
            "required": [
              "RealEstateAgent",
              "Organization"
            ],
            "template": {
              "@context": "https://schema.org",
              "@type": "RealEstateAgent",
              "name": "#{agency_name}",
              "description": "#{agency_description}",
              "address": {
                "@type": "PostalAddress",
                "streetAddress": "#{street_address}",
                "addressLocality": "#{city}",
                "addressRegion": "#{state_province}",
                "postalCode": "#{postal_code}"
              },
              "telephone": "#{phone_number}",
              "email": "#{email_address}",
              "areaServed": "#{service_areas}"
            }
          },
          "property_pages": {
            "required": [
              "Product",
              "Place"
            ],
            "template": {
              "@context": "https://schema.org",
              "@type": "Product",
              "name": "#{property_title}",
              "description": "#{property_description}",
              "image": "#{property_images}",
              "offers": {
                "@type": "Offer",
                "price": "#{price}",
                "priceCurrency": "#{currency}",
                "availability": "#{availability_status}"
              },
              "address": {
                "@type": "PostalAddress",
                "streetAddress": "#{property_address}",
                "addressLocality": "#{city}",
                "addressRegion": "#{state_province}",
                "postalCode": "#{postal_code}"
              }
            }
          }
        }
      },
      "professional_services": {
        "description": "Professional service providers like lawyers, accountants, consultants",
        "primary_schemas": [
          "ProfessionalService",
          "Organization",
          "Person"
        ],
        "page_specific_schemas": {
          "homepage": {
            "required": [
              "ProfessionalService",
              "Organization"
            ],
            "template": {
              "@context": "https://schema.org",
              "@type": "ProfessionalService",
              "name": "#{business_name}",
              "description": "#{business_description}",
              "address": {
                "@type": "PostalAddress",
                "streetAddress": "#{street_address}",
                "addressLocality": "#{city}",
                "addressRegion": "#{state_province}",
                "postalCode": "#{postal_code}"
              },
              "telephone": "#{phone_number}",
              "email": "#{email_address}",
              "areaServed": "#{service_areas}",
              "serviceType": "#{service_type}"
            }
          }
        }
      }
    },
    "validation_tools": [
      {
        "name": "Google Rich Results Test",
        "url": "https://search.google.com/test/rich-results",
        "purpose": "Validate schema markup and preview rich results"
      },
      {
        "name": "Schema Markup Validator",
        "url": "https://validator.schema.org/",
        "purpose": "Comprehensive schema validation"
      },
      {
        "name": "Google Structured Data Testing Tool",
        "url": "https://search.google.com/structured-data/testing-tool",
        "purpose": "Legacy testing tool for structured data"
      }
    ],
    "implementation_guidelines": {
      "placement": {
        "method": "JSON-LD",
        "location": "head_section",
        "format": "application/ld+json"
      },
      "best_practices": [
        "Use JSON-LD format for schema markup",
        "Include all required properties for each schema type",
        "Validate markup before deployment",
        "Use specific schema types rather than generic ones",
        "Include image URLs with proper dimensions",
        "Use consistent @id references across pages",
        "Include aggregate ratings when available",
        "Use proper date formats (ISO 8601)",
        "Include complete address information",
        "Use schema.org URLs for @context"
      ],
      "common_mistakes": [
        "Missing required properties",
        "Incorrect data types",
        "Invalid URL formats",
        "Missing @context declaration",
        "Inconsistent business information",
        "Outdated schema versions",
        "Missing image alt text",
        "Incorrect review schema structure"
      ]
    },
    "dynamic_variables": {
      "business_info": {
        "business_name": "Company legal name",
        "business_alternate_name": "DBA or common name",
        "business_description": "Brief business description",
        "phone_number": "Primary contact number",
        "email_address": "Primary contact email",
        "site_url": "Website base URL",
        "business_logo": "Logo image URL"
      },
      "location_info": {
        "street_address": "Physical street address",
        "city": "City name",
        "state_province": "State or province",
        "postal_code": "ZIP or postal code",
        "country_code": "ISO country code",
        "latitude": "GPS latitude coordinate",
        "longitude": "GPS longitude coordinate",
        "service_areas": "Array of served locations"
      },
      "service_info": {
        "service_catalog_name": "Name of service catalog",
        "services_array": "Array of offered services",
        "price_range": "Price range indicator",
        "opening_hours": "Business hours specification",
        "payment_methods": "Accepted payment methods",
        "currency": "Primary currency code"
      },
      "seo_info": {
        "website_name": "Website title",
        "website_description": "Website meta description",
        "service_page_url": "URL of service page",
        "languages": "Supported languages"
      }
    },
    "monitoring": {
      "google_search_console": {
        "rich_results": "Monitor rich results performance",
        "enhancement_reports": "Check for schema errors",
        "index_coverage": "Ensure pages are indexed"
      },
      "schema_testing": {
        "frequency": "weekly",
        "automated_testing": true,
        "validation_tools": "multiple_validators"
      }
    }
  }
}