{
  "name": "Virgo Web Development Agent",
  "version": "3.0.0",
  "description": "Conversational multi-agent orchestrator for website migrations and development",
  "framework": "Astro",
  "cms": "Sanity",
  "style": "TailwindCSS",
  "language": "TypeScript",
  "deployment": ["Vercel"],
  "tracking": ["CallRail", "GTM", "GA4"],
  "integrations": ["Jobber", "QuickBooks", "Slack"],
  "subagents": [
    "SiteAnalysisAgent",
    "AssetAuditAgent",
    "MigrationAgent",
    "BuilderAgent",
    "SEOAgent",
    "DeploymentAgent",
    "DocumentationAgent"
  ],
  "interaction_mode": "natural",
  "auto_clarify": true,
  "persistence": true,
  "proactive_engagement": true,
  "workflow_stages": [
    {
      "stage": "initialization",
      "description": "Project setup and requirements gathering",
      "agent": "orchestrator",
      "estimated_duration": "30 minutes"
    },
    {
      "stage": "site_analysis",
      "description": "Analyze existing website structure and content",
      "agent": "SiteAnalysisAgent",
      "estimated_duration": "1 hour"
    },
    {
      "stage": "asset_audit",
      "description": "Identify and catalog all required assets",
      "agent": "AssetAuditAgent",
      "estimated_duration": "45 minutes"
    },
    {
      "stage": "migration_planning",
      "description": "Plan subdomain strategy and redirect mapping",
      "agent": "MigrationAgent",
      "estimated_duration": "1 hour"
    },
    {
      "stage": "development",
      "description": "Build new site with Astro + Sanity + Tailwind",
      "agent": "orchestrator",
      "estimated_duration": "4-6 hours"
    },
    {
      "stage": "seo_implementation",
      "description": "Apply schema markup and SEO optimizations",
      "agent": "SEOAgent",
      "estimated_duration": "2 hours"
    },
    {
      "stage": "testing",
      "description": "Test all functionality and performance",
      "agent": "orchestrator",
      "estimated_duration": "1 hour"
    },
    {
      "stage": "deployment",
      "description": "Deploy to staging and production",
      "agent": "DeploymentAgent",
      "estimated_duration": "1 hour"
    },
    {
      "stage": "documentation",
      "description": "Create migration documentation and guides",
      "agent": "DocumentationAgent",
      "estimated_duration": "1 hour"
    }
  ],
  "business_types": {
    "service_business": {
      "schema": ["LocalBusiness", "Service", "FAQPage", "Review"],
      "integrations": ["Jobber", "CallRail"],
      "pages": ["home", "services", "about", "contact", "reviews"]
    },
    "ecommerce": {
      "schema": ["Product", "Offer", "AggregateRating"],
      "integrations": ["Shopify", "Stripe"],
      "pages": ["home", "products", "cart", "checkout", "account"]
    },
    "real_estate": {
      "schema": ["Product", "Offer", "Place", "PostalAddress"],
      "integrations": ["MLS", "LeadManager"],
      "pages": ["home", "listings", "agents", "contact", "market-reports"]
    },
    "professional_services": {
      "schema": ["Organization", "Service", "ContactPoint"],
      "integrations": ["QuickBooks", "Calendly"],
      "pages": ["home", "services", "team", "contact", "resources"]
    }
  },
  "performance_targets": {
    "pagespeed_mobile": 90,
    "pagespeed_desktop": 95,
    "seo_audit_score": 95,
    "accessibility_score": 90,
    "first_contentful_paint": "1.5s",
    "largest_contentful_paint": "2.5s"
  },
  "quality_gates": {
    "before_staging_deploy": [
      "all_pages_responsive",
      "forms_functional",
      "analytics_configured",
      "schema_validated"
    ],
    "before_production_deploy": [
      "performance_targets_met",
      "seo_audit_passed",
      "cross_browser_tested",
      "client_approval_received"
    ]
  },
  "logging": {
    "checkpoint_frequency": "per_stage",
    "log_location": "/virgo-agents/logs/",
    "retain_logs_days": 90,
    "include_performance_metrics": true
  },
  "notifications": {
    "slack_enabled": true,
    "email_enabled": false,
    "progress_updates": true,
    "error_alerts": true,
    "completion_summary": true
  },
  "rollback_strategy": {
    "enabled": true,
    "automatic_checkpoints": true,
    "manual_checkpoint_command": "agent.create_checkpoint()",
    "rollback_command": "agent.rollback_to_checkpoint(checkpoint_id)"
  }
}